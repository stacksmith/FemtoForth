PROC osys {
color'green "     TOS      NOS      DSP      RSP     HEAD      CPL     BASE  ENTRIES" ctell cr 
dup . space over . space DSP 4+ . space RSP . space cr ;
 }
end

PROC tester {
 "tester" ctell cr
 $99 error'throw
;
}
end

PROC protected {
 error'catch 0= if
   "OK, inside" ctell cr
   tester
   error'clear
 else
   "ERRORer out" ctell cr
 thanx
 "outside now" ctell cr
 ;
}
end
