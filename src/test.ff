cd io
U32 HIN
|
0 into HIN

U32 HOUT
|
1 into HOUT
// ---
PROC emit // (c--)
{  HOUT putc ; }
|

PROC key // (--n)
{ HIN getc ; }
|
PROC hexd // (hexd--ascii) convert a hex digit to ascii
{ 
  $F and '0' +
  if( $39 over < ) 
    7 + 
  thanx ; 
}
|

PROC hexp // (val,nybcnt--)
{
  times (
    28 ror
    dup hexd emit
  )
  drop ;
}
|

PROC . // (val--)
{
  8 hexp ;
}
|


PROC ctell // (ptr,cnt--)
{ times (
    c@++ emit
  )
  drop ;
}
|
PROC space { $20 emit ; }
|
PROC cr { $D emit $A emit ; }
|
PROC tab { 9 emit ; }
|
// ============================================ 
PROC color // (col--)
{  $1B emit
   "[0;3" ctell
   '0' + emit // output as ascii digit
   'm' emit
   ;
}
|

cd color
PROC red { 1 color ; }
|
PROC green { 2 color ; }
|
PROC yellow { 3 color ; }
|
PROC blue { 4 color ; }
|
PROC magenta { 4 color ; }
|
PROC cyan { 6 color ; }
|
PROC white { 7 color ; }
|

cd io
PROC splashp
{ color'blue 4 times (
  "-+|+-- -- - - -- -" ctell
  ) cr ;
}
|
PROC splash
{ splashp 
  tab tab color'yellow " FemtoForth" ctell 
  tab tab color'cyan "2012 Victor Yurkovsky" ctell cr 
  splashp color'white cr ; }
|

cd core
mkdir head cd head
$04000018 SYSVAR ptr
|
cd core
mkdir dic cd dic
$04000008 SYSVAR ptr
|
cd core
mkdir run cd run
$0400000C SYSVAR ptr
|
// ============================================ 
// sys
// ============================================ 
cd core
PROC osys {
color'green "     TOS      NOS      DSP      RSP     HEAD      CPL     BASE  ENTRIES" ctell cr 
  dup . space over . space DSP 4+ . space RSP . space
  dic'ptr . space
  run'ptr . space

cr ;
 }
|

PROC tester {
 "tester" ctell cr
 $99 error'throw
;
}
|

PROC protected {
 error'catch 0= if
   "OK, inside" ctell cr
   tester
   error'clear
 else
   "ERRORer out" ctell cr 
 thanx
 "outside now" ctell cr
 ;
}
|
